.preloader-container {
 
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  width: 100%;
  z-index: 1000;
  pointer-events: auto;
  opacity: 1;
}

.top-section,
.bottom-section {
  
  position: absolute;
  left: 0;
  right: 0;
}

.top-section {
  top: 0;
  height: 57%;
  display: flex;
  align-items: end;
  justify-content: center;
  padding: 20px;
  clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%);
}

.bottom-section {
  bottom: 0;
  height: 44%;
  display: flex;
  align-items: end;
  justify-content: center;
  padding: 20px;
  text-align: center;
  clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%);
}

.logo-container,
.progress-container,
.percentage-container {
  opacity: 0;
}

.logos-wrapper {
  overflow: hidden;
  width: 70%;
  margin-bottom: 1rem;
}

.logos-inner {
  display: flex;
  justify-content: center;
  align-items: center;
}

.progress-container {
  height: 1px;
  position: relative;
  margin-top: 1rem;
}

.progress-track {
  width: 100%;
  height: 100%;
  background-color: rgba(205, 205, 205, 0.65);
}

.progress-bar {
  width: 70%;
  height: 100%;
  position: absolute;
  transform-origin: left;
  transform: scaleX(0);
  background-color: #fff;
}

.percentage-text {
  font-size: 1.5rem;
  font-weight: 500;
}

.text {
  font-size: 1.5rem;
  font-weight: 700;
}

.percentage-text{
color: #fff;
}


	</style>
