<script>
  import { gsap } from "gsap";
  import ScrollTrigger from "gsap/dist/ScrollTrigger";
  import { SplitText } from "gsap/dist/SplitText";
  gsap.registerPlugin(SplitText);
  gsap.registerPlugin(ScrollTrigger);

  let split = SplitText.create(".effect", {type:"words, chars"})
  let splitMenuItems = SplitText.create(".nav-title", {type:"words, chars"})

const tl = gsap.timeline({
  scrollTrigger: {
    trigger: ".section_footer",
    start: "top 70%",
    end: "top 100%",
     toggleActions: "play none none reset",
  }
});


tl.fromTo(
  ".brand-text",
  {
    y: 500,
    opacity: 0,
    scale: 0.95,
    ease:"rough.in"
  },
  {
    y: -50,
    opacity: 1,
    scale: 1,
    ease: "rough.in",
    color: "var(--stroke-color)",
  },
  0.2
);


  tl.fromTo(".footer-heading",{
      opacity:0,
      stagger: 0.1,
      ease: "rough.out",
    },
    {
       duration: 0.9,
        opacity: 1,
       
        stagger: 0.1,
        ease: "rough.in",
    }
  ),
  0.2

  tl.fromTo(".cta-button",{
      opacity:0,
      x:-200,
    },
    {
      duration: 0.2,
      opacity: 1,
      x:0,
      ease: "power4.in",
    },
    0.5
  )

gsap.from(split.chars, {
 autoAlpha: 0,
 delay:0.5,
      scale: 4,
      duration: 1,
      ease: "power4.inOut",
      scrollTrigger: {
    trigger: ".section_footer",
    start: "top 70%",
    end: "top 100%",
    toggleActions: "play none none reset",
  }
});



</script>