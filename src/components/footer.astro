<script>
  import { gsap } from "gsap";
  import ScrollTrigger from "gsap/dist/ScrollTrigger";
  import { SplitText } from "gsap/dist/SplitText";
  gsap.registerPlugin(SplitText);
  gsap.registerPlugin(ScrollTrigger);

const tl = gsap.timeline({
  scrollTrigger: {
    trigger: ".section_footer",
    start: "top 30%",
    end: "top 40%",
    markers: true,
  }
});


tl.fromTo(
  ".brand-text",
  {
    y: 500,
    opacity: 0,
    scale: 0.95,
    ease:"power3.in"
  },
  {
    y: 0,
    opacity: 1,
    scale: 1,
    ease: "power3.out",
    color: "var(--stroke-color)",
    // delay:1
  },
  0.2
);


  tl.fromTo(".footer-heading",{
      opacity:0,
      stagger: 0.1,
      ease: "rough.out",
    },
    {
       duration: 0.9,
        opacity: 1,
       
        stagger: 0.1,
        ease: "rough.in",
    }
  ),
  0.2

</script>